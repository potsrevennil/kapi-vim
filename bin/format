#!/usr/bin/env bash

set -o errexit
set -o errtrace
set -o nounset
set -o pipefail

ROOT="$(realpath "$(dirname "$0")"/../)"
. "$ROOT/bin/log"

info "Formatting nix files"
nixpkgs-fmt "$ROOT"

info "Formatting shell scripts"
shfmt -s -w -l -i 2 -ci -fn "$ROOT"

info "Formatting lua scripts"
stylua --verify "$ROOT"

info "Formatting toml"
taplo format "$ROOT"
